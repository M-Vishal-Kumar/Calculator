def onebyx():
    global expression
    C = 1 / float(expression)
    label.config(text=C)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\buttons20.mp3")
    pygame.mixer.music.play(loops=0)


def pi():
    add("+3.14")
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\buttons20.mp3")
    pygame.mixer.music.play(loops=0)


def factorial():
    global expression
    C = math.factorial(expression)
    label.config(text=C)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\buttons20.mp3")
    pygame.mixer.music.play(loops=0)






