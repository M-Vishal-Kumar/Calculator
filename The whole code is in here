import tkinter 
from tkinter import *
import math
import pygame


pygame.mixer.init()
#Making of window

wn = tkinter.Tk()
wn.geometry("330x500+350+350")
wn.title('calculator')
wn.iconbitmap("C:/Users/admin/Downloads/shutterstock_1386882278-1.jpg")



"______________________________________________________________________________________"


#functions
expression = ""

def add(vary):
    global expression
    expression += vary
    label.config(text=expression)

def calculate():
    
    global expression
    result = ""
    if expression != "":

        try:
            result = eval(expression)
        except:
            result = ""
            expression = ""
    label.config(text=result)
    expression = str(result)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\=soundup.wav")
    pygame.mixer.music.play(loops=0)

def clearance():
    global expression
    expression = ""
    label.config(text=expression)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\cle4rwavewav.wav")
    pygame.mixer.music.play(loops=0)


def square():
    global expression
    C = float(eval(expression))**2
    label.config(text=C)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\buttons20.mp3")
    pygame.mixer.music.play(loops=0)


def squarroot():
    global expression
    C = math.sqrt(float(eval(expression)))
    label.config(text=C)
    pygame.mixer.music.load("C:\\Users\\admin\\Downloads\\buttons20.mp3")
    pygame.mixer.music.play(loops=0)
"_________________________________________________________________________________________________________________________________"


